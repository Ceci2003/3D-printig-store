---
import Layout from '../../components/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { data, body } = product;
let settings = null;
try {
  settings = (await getEntry('site', 'settings')).data;
} catch (e) {
  // Settings not found, use defaults
}
let categoriesData = null;
try {
  categoriesData = (await getEntry('categories', 'categories')).data;
} catch (e) {
  categoriesData = { categories: [] };
}
const category = categoriesData.categories.find(c => c.id === data.categoryId);
const priceDisplay = data.price ? `${data.price} €` : data.priceFrom ? `от ${data.priceFrom} €` : 'По запитване';
---

<Layout title={`${data.title} - ${settings?.siteName || '3D Print Studio'}`}>

  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="mb-6 text-sm text-gray-600" aria-label="Навигация">
        <a href="/" class="hover:text-blue-600">Начало</a> / 
        <a href="/products" class="hover:text-blue-600">Продукти</a> / 
        <span class="text-gray-900">{data.title}</span>
      </nav>

      <div class="grid md:grid-cols-2 gap-8 mb-8">
        <!-- Images Gallery -->
        <div>
          {data.images && data.images.length > 0 ? (
            <div class="space-y-4">
              <img
                src={data.images[0].src}
                alt={data.images[0].alt || data.title}
                class="w-full rounded-lg shadow-md"
                id="main-image"
                onerror="this.src='/images/missing-photo.png'; this.onerror=null;"
              />
              {data.images.length > 1 && (
                <div class="grid grid-cols-4 gap-2">
                  {data.images.map((img, idx) => (
                    <button
                      type="button"
                      class="border-2 border-transparent hover:border-blue-500 rounded overflow-hidden focus:outline-none focus:ring-2 focus:ring-blue-500"
                      onclick={`document.getElementById('main-image').src = '${img.src}'; document.getElementById('main-image').alt = '${img.alt || data.title}';`}
                    >
                      <img 
                        src={img.src} 
                        alt={img.alt || `${data.title} ${idx + 1}`} 
                        class="w-full aspect-square object-cover"
                        onerror="this.src='/images/missing-photo.png'; this.onerror=null;"
                      />
                    </button>
                  ))}
                </div>
              )}
            </div>
          ) : (
            <img
              src="/images/missing-photo.png"
              alt="Липсващо изображение"
              class="w-full aspect-square object-cover rounded-lg shadow-md"
            />
          )}
        </div>

        <!-- Product Info -->
        <div>
          <div class="flex gap-2 mb-4">
            {data.isNew && (
              <span class="bg-green-500 text-white text-xs px-2 py-1 rounded">Ново</span>
            )}
            {data.featured && (
              <span class="bg-yellow-500 text-white text-xs px-2 py-1 rounded">Топ</span>
            )}
            {data.isCustomizable && (
              <span class="bg-blue-500 text-white text-xs px-2 py-1 rounded">Персонализиран</span>
            )}
            {category && (
              <span class="bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded">{category.title}</span>
            )}
          </div>

          <h1 class="text-3xl font-bold mb-4">{data.title}</h1>
          <div class="text-3xl font-bold text-blue-600 mb-6">{priceDisplay}</div>

          <p class="text-gray-700 mb-6">{data.shortDescription}</p>

          {data.materials && data.materials.length > 0 && (
            <div class="mb-6">
              <h3 class="font-semibold mb-2">Материали:</h3>
              <div class="flex flex-wrap gap-2">
                {data.materials.map(material => (
                  <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded">{material}</span>
                ))}
              </div>
            </div>
          )}

          <div class="space-y-4 mb-6">
            <a
              href={`/contacts?product=${product.slug}`}
              class="block w-full bg-blue-600 text-white text-center py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition font-semibold"
            >
              Запитване за този продукт
            </a>
          </div>

          <!-- Delivery/Payment Highlights -->
          <div class="bg-gray-50 rounded-lg p-4 space-y-2 text-sm">
            <div class="flex items-center gap-2">
              <span>✓</span>
              <span>Преглед преди плащане</span>
            </div>
            <div class="flex items-center gap-2">
              <span>✓</span>
              <span>Наложен платеж</span>
            </div>
            <div class="flex items-center gap-2">
              <span>✓</span>
              <span>{settings?.turnaroundText || 'Обикновено 1–3 дни'}</span>
            </div>
            <div class="flex items-center gap-2">
              <span>✓</span>
              <span>Доставка: {settings?.couriers?.join(', ') || 'Еконт, Спиди, Рапидо'}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Long Description -->
      <div class="prose max-w-none mb-8">
        <h2>Описание</h2>
        <div set:html={body} />
      </div>
    </div>
  </div>
</Layout>

