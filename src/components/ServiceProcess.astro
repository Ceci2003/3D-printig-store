---
import { getEntry } from 'astro:content';

interface Step {
  title: string;
  description?: string;
}

interface Props {
  steps: Step[];
}

const { steps } = Astro.props;

// Get settings for info card
let settings = null;
let couriers: string[] = [];
let turnaroundText = '1–3 дни';
try {
  const entry = await getEntry('site', 'settings');
  if (entry && entry.data) {
    settings = entry.data;
    couriers = settings.couriers || [];
    turnaroundText = settings.turnaroundText || '1–3 дни';
  }
} catch (e) {
  // Settings not found, use defaults
  couriers = ['Еконт', 'Спиди'];
  turnaroundText = '1–3 дни';
}

// Info card content
const infoPoints = [
  'Прикачи STL/STEP или снимка + размери',
  'Избор на материал: PLA / PETG / TPU',
  'Потвърждаваме цена и срок преди изработка',
  'Доставка с преглед / наложен платеж'
];
---

<section class="py-12 lg:py-16 bg-white mb-12 lg:mb-16" aria-labelledby="service-process-title">
  <div class="container mx-auto px-4">
    <h2 id="service-process-title" class="text-3xl font-bold text-gray-900 mb-8 text-center">
      Как протича услугата
    </h2>

    <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Timeline Column (Left, spans 2 columns on desktop) -->
      <div class="lg:col-span-2">
        <div class="relative">
          <!-- Vertical connector line (behind step badges) -->
          <div 
            class="hidden lg:block absolute left-6 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-200 via-blue-300 to-blue-200"
            aria-hidden="true"
          ></div>

          <!-- Steps -->
          <ol class="space-y-8 lg:space-y-10 relative">
            {steps.map((step, index) => {
              const stepNumber = String(index + 1).padStart(2, '0');
              const isLast = index === steps.length - 1;
              
              return (
                <li class="relative">
                  <div class="flex gap-6 lg:gap-8">
                    <!-- Step Badge & Connector -->
                    <div class="flex-shrink-0 relative z-10">
                      <div 
                        class="w-12 h-12 lg:w-14 lg:h-14 rounded-full bg-blue-600 text-white flex items-center justify-center font-bold text-base lg:text-lg shadow-lg ring-4 ring-white"
                        aria-label={`Стъпка ${index + 1}`}
                      >
                        {stepNumber}
                      </div>
                      {/* Decorative arrow between steps (desktop only) */}
                      {!isLast && (
                        <div 
                          class="hidden lg:block absolute left-1/2 top-full -translate-x-1/2 mt-2 text-blue-400"
                          aria-hidden="true"
                        >
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                          </svg>
                        </div>
                      )}
                    </div>

                    <!-- Step Card -->
                    <div class="flex-1 pb-2">
                      <div class="bg-white rounded-2xl border border-gray-200 shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-0.5 p-6 lg:p-7">
                        <h3 class="font-bold text-lg lg:text-xl text-gray-900 mb-2">
                          {step.title}
                        </h3>
                        {step.description && (
                          <p class="text-gray-600 text-sm lg:text-base leading-relaxed">
                            {step.description}
                          </p>
                        )}
                      </div>
                    </div>
                  </div>
                </li>
              );
            })}
          </ol>
        </div>
      </div>

      <!-- Info Card Column (Right, 1 column on desktop) -->
      <div class="lg:col-span-1">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl border border-blue-200 shadow-sm p-6 lg:p-7 lg:sticky lg:top-8">
          <h3 class="font-bold text-lg lg:text-xl text-gray-900 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Какво да подготвиш
          </h3>
          
          <ul class="space-y-3 mb-6">
            {infoPoints.map((point) => (
              <li class="flex items-start gap-3 text-sm lg:text-base text-gray-700">
                <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{point}</span>
              </li>
            ))}
          </ul>

          {/* Info Chips */}
          <div class="flex flex-wrap gap-2 pt-4 border-t border-blue-200">
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-blue-600 text-white">
              Срок: {turnaroundText}
            </span>
            {couriers.length > 0 && (
              <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-white text-blue-700 border border-blue-300">
                Куриери: {couriers.join('/')}
              </span>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      transition-duration: 0.01ms !important;
    }
  }
</style>
