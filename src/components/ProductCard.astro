---
import type { CollectionEntry } from 'astro:content';

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { data, slug } = product;
const priceDisplay = data.price ? `${data.price} лв.` : data.priceFrom ? `от ${data.priceFrom} лв.` : 'По запитване';
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <a href={`/products/${slug}`} class="block focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-lg">
    <div class="aspect-square bg-gray-200 relative overflow-hidden">
      {data.images && data.images[0] ? (
        <img
          src={data.images[0].src}
          alt={data.images[0].alt || data.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-gray-400">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      )}
      <div class="absolute top-2 right-2 flex gap-1">
        {data.isNew && (
          <span class="bg-green-500 text-white text-xs px-2 py-1 rounded">Ново</span>
        )}
        {data.featured && (
          <span class="bg-yellow-500 text-white text-xs px-2 py-1 rounded">Топ</span>
        )}
        {data.isCustomizable && (
          <span class="bg-blue-500 text-white text-xs px-2 py-1 rounded">Персонализиран</span>
        )}
      </div>
    </div>
    <div class="p-4">
      <h3 class="font-semibold text-lg mb-2 text-gray-900">{data.title}</h3>
      <p class="text-gray-600 text-sm mb-3 line-clamp-2">{data.shortDescription}</p>
      <div class="text-xl font-bold text-blue-600 mb-3">{priceDisplay}</div>
      <div class="flex gap-2">
        <a
          href={`/contacts?product=${slug}`}
          class="flex-1 bg-blue-600 text-white text-center py-2 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition"
        >
          Поръчай
        </a>
        <a
          href={`/products/${slug}`}
          class="flex-1 border border-blue-600 text-blue-600 text-center py-2 rounded hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition"
        >
          Детайли
        </a>
      </div>
    </div>
  </a>
</div>

