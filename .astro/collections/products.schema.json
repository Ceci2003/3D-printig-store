{
  "$ref": "#/definitions/products",
  "definitions": {
    "products": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "categoryId": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "price": {
          "type": "number"
        },
        "priceFrom": {
          "type": "number"
        },
        "isCustomizable": {
          "type": "boolean",
          "default": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "isNew": {
          "type": "boolean",
          "default": false
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "draft"
          ],
          "default": "active"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "src": {
                "type": "string"
              },
              "alt": {
                "type": "string"
              }
            },
            "required": [
              "src",
              "alt"
            ],
            "additionalProperties": false
          }
        },
        "shortDescription": {
          "type": "string"
        },
        "materials": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "title",
        "categoryId",
        "images",
        "shortDescription"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}